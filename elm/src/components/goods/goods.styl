.goods
  position: absolute
  top: 176px
  bottom: 46px
  display: flex
  overflow: hidden
  .menu-wrapper
    flex: 0 0 80px
    background: #f3f5f7
    .menu-item
      display: table
      height: 54px
      text-align: center
      background: #f3f5f7
      &.current
        position: relative
        z-index: 10
        margin-top: -1px
        font-weight: 700
        background: #fff
        .text
          border-none()
      .icon
        margin-right: 2px
      .text
        width: 56px
        display: table-cell
        vertical-align: middle
        font-size: 12px
        line-height: 14px
        padding: 0 12px
        border-1px(rgba(7, 17, 27, 0.1))
  .foods-wrapper
    flex: 1
    .title
      height: 26px
      line-height: 26px
      border-left: 2px solid #d9dde1
      padding-left: 14px
      font-size: 12px
      color: rgb(147, 153, 159)
      background: #f3f5f7
    .food-item
      display: flex
      margin: 18px 18px 0 18px
      padding-bottom: 18px
      border-1px(rgba(7, 17, 27, 0.1))
      &:last-child
        border-none()
      .icon
        flex: 0 0 57px
        margin-right: 10px
        img
          border-radius: 3px
      .content
        flex: 1
        .name
          margin-top: 2px
          font-size: 14px
          color: rgb(7, 17, 27)
          line-height: 14px
        .desc, .extra
          margin: 8px 0
          font-size: 10px
          color: rgb(147, 153, 159)
          line-height: 13px
        .month-sell
          margin-right: 12px
        .price
          .price-now
            font-size 14px
            font-weight: 700
            line-height: 24px
            color: rgb(240, 20, 20)
            margin-right: 8px
          .oldPrice
            font-size: 10px
            font-weight: 700
            line-height: 24px
            color: rgb(147, 153, 159)
            text-decoration: line-through


        .cartcontrol-wrapper
          display: inline-block
          float: right

