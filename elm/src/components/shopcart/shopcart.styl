.shopcart
  position: fixed
  left: 0
  bottom: 0
  height: 46px
  width: 100%
  .content
    display: flex
    background: #141d27
    font-size: 0
    .content-left
      flex: 1
      .logo-wrapper
        position: relative
        top: -12px
        display: inline-block
        margin: 0 12px 2px 12px
        padding: 6px
        width: 56px
        height: 56px
        box-sizing: border-box
        border-radius: 50%
        background: #141d27
        .logo
          width: 100%
          height: 100%
          background: #2b343c
          border-radius: 50%
          text-align: center
          .icon-shopping_cart
            font-size: 24px
            color: #80858a
            line-height: 44px
          &.highlight
            background: rgb(0, 160, 220)
            .icon-shopping_cart
              color: #fff
        .num
          position: absolute
          left: 34px
          top: 0px
          width: 24px
          font-size: 9px
          font-weight: 700
          line-height: 16px
          text-align: center
          color: #fff
          border-radius: 16px
          background: rgb(240, 20, 20)
          box-shadow: 0px 4px 8px 0px rgba(0, 0, 0 , 0.4)

      .price
        display: inline-block
        font-size: 16px
        font-weight: 700
        line-height: 24px
        color: rgba(255, 255, 255, 0.4)
        vertical-align: top
        margin-top: 12px
        padding-right: 12px
        border-right: 1px solid rgba(255, 255, 255, 0.1)
        &.highlight
          color: #fff
      .desc
        display: inline-block
        font-size: 14px
        font-weight: 300
        line-height: 24px
        color: rgba(255, 255, 255, 0.4)
        vertical-align: top
        margin: 12px 0 0 12px
    .content-right
      flex: 0 0 105px
      width: 105px
      .pay
        width: 100%
        height: 48px
        line-height: 48px
        box-sizing: border-box
        padding: 0 8px
        font-size: 12px
        color: rgba(255, 255, 255, 0.4)
        font-weight: 700
        text-align: center
        background: #2b333b
        &.enough
          background: forestgreen
          color: #fff
  .ball-container
    .ball
      position: fixed
      left: 32px
      bottom: 32px
      z-index: 20
      transition: all .4s cubic-bezier(0.49, -0.29, 0.75, 0.41)
      .inner
        width: 16px
        height: 16px
        border-radius: 50%
        background: rgb(0, 160, 220)
        transition: all .4s linear
